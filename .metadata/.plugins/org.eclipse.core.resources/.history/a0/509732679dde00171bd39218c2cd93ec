
public class DoubleDice 
{	
    public static void main(String[] args) 
    { 
       DoubleDice dice;          
       int rollCount;    
 
       dice = new DoubleDice();  
       rollCount = 0;
       
       
       
       do {
           dice.roll();
           System.out.println("The dice come up " + dice.getDie1() 
                                            + " and " + dice.getDie2());
           rollCount++;
       } while (dice.getTotal() != 2);
         
       System.out.println("\nIt took " + rollCount + " rolls to get a 2.");
       
    }

